<?xml version="1.0" encoding="utf-8"?>
<extension method="upgrade" version="1.5" type="component">
    <name>com_tz_multipurpose</name>
	<author>ThuongNVTemplaza</author>
    <authorEmail>support@templaza</authorEmail>
    <creationDate>April 2014</creationDate>
    <authorUrl>www.templaza.com</authorUrl>
	<authorEmail>support@templaza.com</authorEmail>
	<copyright>Copyright (C) 2012 TemPlaza. All rights reserved.</copyright>
	<license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
	<version>1.1</version>
	<description>TZ Multipurpose native for Joomla! 2.5.x and 3.x</description>
	
	<install folder="admin">
        <sql>
            <file charset="utf8" driver="mysql">install/install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file charset="utf8" driver="mysql">install/uninstall.sql</file>
        </sql>
    </uninstall>
	
	<administration>
        <menu>TZ_Multipurpose</menu>
        <files folder="admin">
	    	<folder>controllers</folder>
	    	<folder>helpers</folder>
            <folder>js</folder>
            <folder>jui</folder>
            <folder>install</folder>
	    	<folder>libraries</folder>
	    	<folder>models</folder>
	    	<folder>tables</folder>
	    	<folder>views</folder>
            <folder>elements</folder>
            <filename>tz_multipurpose.php</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
	    </files>
        <languages folder="admin/languages">
            <language tag="en-GB">en-GB/en-GB.com_tz_multipurpose.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_tz_multipurpose.sys.ini</language>
        </languages>
    </administration>
</extension>
